<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>사이다경제 | 비밀번호 찾기</title>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/cid_join.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script type="text/javascript">

	function checkPwd(){
  var f1 = document.forms[0];
  var pw1 = document.psearch.mem_email_new_pwd.value;
  var pw2 = document.psearch.mem_email_new_pwd_ch.value;
  if(pw1!=pw2){
   document.getElementById('checkPwd').style.color = "red";
   document.getElementById('checkPwd').innerHTML = "  *패스워드가 다릅니다."; 
  }else{
   document.getElementById('checkPwd').style.color = "blue";
   document.getElementById('checkPwd').innerHTML = "  *패스워드가 확인 되었습니다.";   
  }  
 }

function pSearch(){
if(document.psearch.mem_email_new_pwd.value.length<=7){
	 alert("비밀번호는 8자리 이상 입력해 주세요.");
	document.psearch.mem_email_new_pwd.focus();
	return;
	 }
	 alert("비밀번호가 변경되었습니다.")
	 document.psearch.submit();
}

</script>

</head>
<body>
<% include ../top %>
<input type="hidden" name="memememe" value="<%= mem[0].mem_name%>">
<div class="row" style="margin:0; padding:0">
	<div class="col-xs-12 main-psearch" style="padding-left:0; padding-right:0;" align="center">
		<div class="bg">
			<div class="row" align="center">
				<div class="col-xs-12 title">
					<p style="margin:0 0 5px;">비밀번호 찾기</p>
				</div>
				<div class="col-xs-12 step-title">
					<p>새로운 비밀번호를 입력해주세요.</p>
				</div>
				<form action="/psearch3" method="post" name="psearch">

				<div class="col-xs-12 id new-pwd padding-lr-0">
					<p class="step-title">비밀번호 :</p> <input name='mem_email_new_pwd' class="code" type="password" style="IME-MODE: disabled" size="12" minlength="8" maxlength="20"  onKeyUp="checkPwd()">
				</div>
				<div class="col-xs-12 id new-pwd-ch padding-lr-0">
					<p class="step-title">비밀번호 확인 :</p> <input name='mem_email_new_pwd_ch' class="code" type="password" style="IME-MODE: disabled" size="12" minlength="8"  maxlength="20" onKeyUp="checkPwd()" />
					<div id="checkPwd" style="margin-left:80px; margin-top:5px;"></div>
				</div>
				<div class="col-xs-12 psearch-btn">
					<div class="col-xs-6 cancle" align="left"><a href="/mem_login"><img src="/page_imgs/member_img/btn-cancle.jpg"></a></div>
					<div class="col-xs-6 next" align="right"><a onClick="pSearch()" style="cursor:pointer"><img src="/page_imgs/member_img/btn-next.jpg"></a></div>
				</div>
				<input type="hidden" name="memno" value="<%= mem[0].mem_no%>">
				</form>
			</div>
		</div>
	</div>
</div>
<% include ../bottom %>

</body>
</html>
