	document.mem_join.mem_email_add.focus();
	  return;
	}
	if(document.mem_join.mem_pw.value!= document.mem_join.mem_pw2.value){
	  alert("비밀번호가 일치하지 않습니다.");
	 document.mem_join.mem_pw.focus();
	 return;
	 }
	 if(document.mem_join.mem_name.value==""){
	 alert("이름을 입력해 주세요.");
	document.mem_join.mem_name.focus();
	  return;
	}
	
	if(document.mem_join.mem_pw.value.length<=7){
	 alert("비밀번호는 8자리 이상 입력해 주세요.");
	document.mem_join.mem_pw.focus();
	return;
	 }
	 
	if(document.mem_join.mem_year.value.length<=3){
	 alert("생년월일은 4자리를 입력해 주세요. 예) 1989");
	document.mem_join.mem_year.focus();
	  return;
	}
	
	for (i=0; i<document.mem_join.mem_email_id.value.length; i++)
        {
         var ch = document.mem_join.mem_email_id.value.charAt(i);//문자를 반환(정수형), 범위 검사 가능
	if ( ( ch < "a" || ch > "z") && (ch < "A" || ch > "Z") && (ch < "0" || ch > "9" ) )
    	{
            alert("아이디는 영문 소문자로만 입력 가능 합니다!");
            document.mem_join.mem_email_id.focus();
            return;
         }
		}
	
	
	for (i=0; i<document.mem_join.mem_year.value.length; i++)
     {
     	 var ch = document.mem_join.mem_year.value.charAt(i);//문자를 반환(정수형), 범위 검사 가능
		if ( ch < "0" || ch > "9" )
    	 {
            alert("번호는 숫자로만 입력 가능 합니다!");
            document.mem_join.mem_year.focus();
            return;
         }
      }
	
	 
	 	document.mem_join.submit();
}

