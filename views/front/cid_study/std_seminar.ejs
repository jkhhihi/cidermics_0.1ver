    <!--JS-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!--script src="/js/materialize.js"></script-->

    <!-- 메인 문구 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <script>var ml = { timelines: {}};</script>

    <!-- 네이버 -->
    <meta name="naver-site-verification" content="083657cb98aa9a4a9c62dedeffddfb2490545da0"/>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- favicon -->
    <link rel="shortcut icon" href="http://cidermics.com/page_imgs/fixed_img/favicon.ico"/>
    <link rel="icon" href="http://cidermics.com/page_imgs/fixed_img/favicon.ico"/>

 

  <script src="/js/gotoup.js"></script>
  
  <!-- 스터디 리스트 스터디 색상으로 -->
  <style>
  .light-blue.darken-1{background-color: #73c7a6 !important;}
  .light-blue.darken-2{background-color: #73c7a6 !important;}

  .font_line { text-decoration:line-through }
  .font_color_red { color: #cc2e2e; }

  .card-btn{padding:40px;}
  </style>
  
  </head>
  <body>

  <div id="but_top"><a class="btn btn-floating blue-grey darken-4"><i class="material-icons">arrow_upward</i></a></div>
  <% include std_top %>


  <div class="parallax-container valign-wrapper" style="min-height: 300px;">
    <div class="section no-pad-bot" style="padding-top:65px; top:5%;">
      <div class="container" >
        <div class="row center">
          <h5 class="header col s12 light" style="font-weight:500;">경이로움 세미나</h5>
          <h6 class="header col s12 light">매주 다른 경제 교육 세미나를 경험하자!</h6>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="/page_imgs/study_img/relayimg.jpg" alt="Unsplashed background img 1"></div>
  </div>



  <script type="text/javascript">
    var a = Math.floor(Math.random() * 3) + 1;
  </script>
      

<div class="container" style="margin: 50px auto;">
  
  <div class="row">
    <div class="col s12 center">
      <h3><i class="mdi-content-send brown-text"></i></h3>
      <h4>Relay Seminar</h4>
      <p class="center-align light">경이로움 멤버십 회원분들만을 위한 특별한 무료 릴레이 세미나 혜택!</p>
    </div>
  </div>
  
  <div class="row">
    <% for(var i=0; i < semi.length; i++) {  %> 
    <div class="col s12 m6 l4">
      <div class="card">
          <div class="card-image waves-effect waves-block waves-light" >
            <a href="/seminar/detail/<%=semi[i].idx%>"><img src="<%=semi[i].thum%>"></a>

            <% if (semi[i].state== 0) { %>
            <span class="card-btn2"><a class="waves-effect waves-light btn blue darken-3" style="border-radius: 20px; height: 25px; line-height: 25px; padding: 0 1rem; font-size: 10px;">신청중</a></span>
            <% } else if(semi[i].state == 2) { %>
            <span class="card-btn2"><a class="waves-effect waves-light btn teal accent-3" style="border-radius: 20px; height: 25px; line-height: 25px; padding: 0 1rem; font-size: 10px;">마감임박</a></span>
            <% } else { %>
            <span class="card-btn2"><a class="waves-effect waves-light btn red darken-1" style="border-radius: 20px; height: 25px; line-height: 25px; padding: 0 1rem; font-size: 10px;">신청마감</a></span>
            <% } %>

            <span class="card-btn" style="left: 10px;"><a class="waves-effect waves-light btn teal accent-4">자세히 보기</a></span>
            <span class="card-btn"><a class="waves-effect waves-light btn teal accent-4">신청하기</a></span>

          </div>

          <div class="card-content">
          <p><i class="material-icons left">today</i><%=semi[i].sdate%></p>
          <div class="divider"></div>
          <p><i class="material-icons left">attach_money</i><span class="font_line"><%=semi[i].price%></span><span class="font_color_red">  경이로움 멤버십 회원 무료!</span></p>
          </div>

      </div>
    </div>
    <% } %>
  </div>

</div>

  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light"><b>내 삶이 경이로워지는 순간</b></h5>
          <h4 class="header col s12 light"><b>"경이로움"</b></h4>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="/page_imgs/study_img/backgroundm5.jpg" alt="Unsplashed background img 2"></div>
  </div>



  <% include std_bottom %>

</body>
</html>
