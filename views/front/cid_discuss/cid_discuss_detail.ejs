<form class="form-inline" method="post" action="/discuss/comtPush">
<input type="hidden" name="dis_no" value="<%= discuss[0].dis_no%>">
<!-- 찬성 반대 기타 버튼 -->
<div class="container">
	<div class="well well-sm text-center">
		<div id="chartContainer" style="height: 200px; width: 100%;"></div>
		<div class="btn-group" data-toggle="buttons">
		  <label class="btn btn-primary active">
		  <span class="glyphicon glyphicon-thumbs-up"></span>
		    <input type="radio" name="options" id="option1" autocomplete="off" checked value="1"> <%=discuss[0].dis_comt_1%>
		  </label>
		  <label class="btn btn-danger">
		  <span class="glyphicon glyphicon-thumbs-down"></span>
		    <input type="radio" name="options" id="option2" autocomplete="off" value="2"> <%=discuss[0].dis_comt_2%>
		  </label>
		  <label class="btn btn-warning">
		  <span class="glyphicon glyphicon-check"></span>
		    <input type="radio" name="options" id="option3" autocomplete="off" value="3"> 기타
		  </label>
		</div>
	</div>
</div>

<style type="text/css">
	.btn span.glyphicon {
	opacity: 0.5;				
	}
	.btn.active span.glyphicon {
	opacity: 1;				
	}
	.btn span{color:#fff;}
	.btn-warning,
	.btn-warning:focus,
	.btn-warning:hover,
	.btn-warning:visited,
