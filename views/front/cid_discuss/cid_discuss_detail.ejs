<script type="text/javascript">
window.onload = function () {
	var chart = new CanvasJS.Chart("chartContainer",
	{
		title:{
			text: "<%= discuss[0].dis_title%>"
		},
                animationEnabled: true,
		data: [
		{
			type: "doughnut",
			startAngle: 60,
			toolTipContent: "{legendText}: {y} - <strong>#percent% </strong>",
			showInLegend: true,
          explodeOnClick: false, //**Change it to true
			dataPoints: [
				{y: 60, indexLabel: "<%=discuss[0].dis_comt_1%> #percent%", legendText: "<%=discuss[0].dis_comt_1%>" },
				{y: 52, indexLabel: "<%=discuss[0].dis_comt_2%> #percent%", legendText: "<%=discuss[0].dis_comt_2%>" },
				{y: 21,  indexLabel: "<%=discuss[0].dis_comt_3%> #percent%", legendText: "<%=discuss[0].dis_comt_3%>" }
			]
		}
		]
	});
	chart.render();
	}
</script>
