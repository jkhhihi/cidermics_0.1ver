<!--공유 meta tags-->
<meta name="title" content="사이다경제 | 사이다Books" />
<meta property="og:image" content="http://cidermics.com/page_imgs/fixed_img/thum_img.jpg" />
<meta property="og:title" content="사이다경제" />	
<meta property="og:site_name" content="사이다경제">
<meta property="og:type" content="article">
<meta property="og:url" content="http://www.cidermics.com/books/" />
<meta property="og:description" content="사이다경제 경제,금융,주식,기업 콘텐츠" />

</head>
<body>
<!--위로가기 버튼-->
<div id="but_top"><img class="gototop" src="/page_imgs/fixed_img/btn_gotoup.svg"></div>
<% include ../top %>

<!-- div class="bg-blue">
<div class="bg-white project-main container" -->
<div class="books-main container">
<!--콘텐츠뿌림-->
	<div class="books container" align="center">
		<div class="books-title"><img src="/page_imgs/contents_img/icon-book.svg"><p>사이다경제가 추천하는 "사이다Books"</p></div>
		
		<ul class="grid effect-2" id="grid">
				<% for(var i=0; i< books.length; i++) { %>
				<li>
				<div>
					<a href="/contents/detail/<%= books[i].con_no %>">
					<div class="con-img" align="center"><img class="img-responsive" src="<%= books[i].con_photo %>"></div></a>
					<p><a href="/contents/detail/<%= books[i].con_no %>">
						<%= books[i].con_title %></a></p>
				</div>
			</li>
			<% } %>
		</ul>	
		<!-- 콘텐츠 뿌림 끝 -->
	</div>
</div>

		<script src="/js/contents_js/masonry.pkgd.min.js"></script>
		<script src="/js/contents_js/imagesloaded.js"></script>
		<script src="/js/contents_js/classie.js"></script>
		<script src="/js/contents_js/AnimOnScroll.js"></script>
		<script>
			new AnimOnScroll( document.getElementById( 'grid' ), {
				minDuration : 0.4,
				maxDuration : 0.7,
				viewportFactor : 0.2
			} );
		</script>


<% include ../bottom %>

</body>
</html>