	<script type="text/javascript">
				
		var idx = 2;
		function addMore (){
			var contents = '';
			$.ajax({
				url : '/addMore3/'+idx,
				method : 'get',
				success : function(data){
					if (data.contents.length == 0){
						alert('마지막 콘텐츠입니다.');
						return;
					}
					idx ++;
					$.each(data.contents, function (index, value){
						contents += '<div class="col-xs-4"> ' +
							 			'<div class="thumnail"> ' + 
												'<a href="/contents/detail/'+value.con_no+'"> ' +
													'<div class="con-img"> ' +
														'<img class="img-responsive" src="'+value.con_photo+'"/> ' + 
													'</div> ' +
													'<div class="con-title">' + value.con_title +'</div>' +
												'</a> ' +
							 			'</div> '+
							 		'</div> ';
							
					});
					$('#con-list').append(contents);
					
				}
			});
		}
		
	</script>

