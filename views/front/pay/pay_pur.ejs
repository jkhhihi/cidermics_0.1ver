<% include ../top %>

<div id="check-purchase" >
	<div class="title-box">
	<div class="container">
		<span class="title"><b>결제완료 / 신청서 작성</b></span>
	</div>
	</div>
	<div class="check-purchase-in container" align="center">
		<div class="row step">
		<div class="col-xs-5 text" align="left"><span style="color:#1b87c9; margin-right:5px;">■</span><b style="font-size: 17px;">신청서 작성</b></div>
		<div class="col-xs-7 img" align="right"><img class="stepimg img-responsive" src="/page_imgs/pay_img/img-step_2.png"></div>
