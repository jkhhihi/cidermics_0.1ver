<script type="text/javascript">
	function review(a){
		var rd = a.value;
		$.ajax({
			url : '/reviewDate/'+ rd,
			method : 'get',
			success : function(data){
				var ht="";
				//idx ++;
				//alert(rd);
					$.each(data.rd, function (index, value){
						ht += '<li> ' +
									'<div align="center">'+
									'<img class="img-responsive" src='+ value.rev_img +' data-toggle="modal" data-target="#coupon-modal'+value.rev_no+'">'+

									'</div>'+
							 		'<div class="con-border bg-w"> ' +
							 			'<div class="con-title"><span><center>' + value.rev_title +'</center></span></div>' +
							 		'</div> '+
							  '</li> ';	
					});
					$('#grid').html(ht);
					new AnimOnScroll( document.getElementById( 'grid' ), {
						minDuration : 0.4,
						maxDuration : 0.7,
						viewportFactor : 0.2
				} );
			}
		})
	}
</script>
