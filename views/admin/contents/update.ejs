                  </div>
                  
                  <textarea id="content"><%- contents[0].con_content %></textarea>
                  
                  <script type="text/javascript">
                     $(document).ready(function() {
                         $('select').material_select();
                        
                     });
                     
                        
                     
                     
                  </script>
                  
