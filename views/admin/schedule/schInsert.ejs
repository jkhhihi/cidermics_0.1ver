  <script>

  $(document).ready(function() {
    $(".button-collapse").sideNav();
  });

  function schInsert(){
    var schCateNo = $("#sch_cate_no").val();
    var schTitle = $("#sch_title").val();
    var startDate = $("#start_date").val();
    var startTime = $("#start_time").val();
    var endDate = $("#end_date").val();
    var endTime = $("#end_time").val();
    var schLink = $("#sch_link").val();
    var schContent = $("#sch_content").val();

    if(schCateNo == "" || schCateNo == null){
        alert("일정구분을 선택해주세요.");
        return;
    }
    if(schTitle == ""){
        alert("일정명을 입력해주세요.");
        return;
    }
    if(startDate == ""){
        alert("시작일자를 입력해주세요");
        return;
    }
    if(startTime == ""){
        alert("시작시간을 입력해주세요");
        return;
    }
    if(endDate == ""){
        alert("종료일자를 입력해주세요");
        return;
    }
    if(endTime == ""){
        alert("종료시간을 입력해주세요");
        return;
    }
    startTime = startDate+'T'+startTime;
    endTime = endDate+'T'+endTime;
    $.ajax({
        url: "/adm/schInsert",
        type: "POST",
        data: JSON.stringify({"schCateNo":schCateNo, "schTitle":schTitle, "startTime":startTime, "endTime":endTime, "schLink":schLink, "schContent":schContent}),
        contentType: "application/json",
        success: function(data){
            console.log(data);
        },error:function (e){
            console.log(e);
        }
    });
  }
  </script>
  <style>
    .input-field textarea:focus {
      border-bottom: 1px solid #0288d1 !important;
      box-shadow: 0 1px 0 0 #000 !important;
    }
    .input-field textarea:focus + label {
      color: #0288d1 !important;
    }
  </style>

  <script src="/js/gotoup.js"></script>
  </head>
  <body>
  <% var data= CP; %>
  <% include ../include/nav.ejs %>

  <div class="container">
    <div class="row">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <select id="sch_cate_no">
                <option value="" disabled selected>일정 구분</option>
                <% for(var i = 0; i < cateList.length; i++) { %>
                  <option value="<%= cateList[i].cateNo %>"><%= cateList[i].cateNm %>%></option>
                <% }%>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="sch_title" type="text" class="validate">
              <label for="sch_title">* 일정명</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s3">
              <input id="start_date" type="text" class="validate">
              <label for="start_date">* 시작일자</label>
              <span class="helper-text" data-error="wrong" data-success="right">ex) 2018-01-08</span>
            </div>
            <div class="input-field col s3">
              <input id="start_time" type="text" class="validate">
              <label for="start_time">* 시작시간</label>
              <span class="helper-text" data-error="wrong" data-success="right">ex) 17:30</span>
            </div>
            <div class="input-field col s3">
              <input id="end_date" type="text" class="validate">
              <label for="end_date">* 종료일자</label>
              <span class="helper-text" data-error="wrong" data-success="right">ex) 2018-01-08</span>
            </div>
            <div class="input-field col s3">
              <input id="end_time" type="text" class="validate">
              <label for="end_time">* 종료시간</label>
              <span class="helper-text" data-error="wrong" data-success="right">ex) 19:30</span>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="sch_link" type="text" class="validate">
              <label for="sch_link">링크 URL</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="sch_content" class="materialize-textarea"></textarea>
              <label for="sch_content">내용</label>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="center-align">
      <button class="btn light-blue darken-1" onclick="javascript:schInsert();">등록하기</button>
    </div>
  </div>

</body>
</html>
